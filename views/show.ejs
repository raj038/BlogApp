<%-include("partials/header")%>

<div class="ui container main text segment">
    <div class='ui header huge'><%=data.title%></div>
    <div  class="ui top attached">
        <div class="item">
            <img src="<%=data.image%>" class="ui centered rounded image">
            <div class="content">
                <span><%=data.created.toDateString()%></span>
            </div>
            <div class="description">
                <p><%-data.body%></p>
            </div>
            <a class="ui basic violet button" href="/blogs/<%=data._id%>/edit">Edit</a>
            <form id="delete" action="/blogs/<%=data._id%>?_method=DELETE"  method="POST" >
                <button class="ui basic red button">Delete</button>
            </form>
        </div>        
    </div>
</div>

<%-include("partials/footer")%>