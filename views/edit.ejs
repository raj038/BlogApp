<%- include("partials/header")%>

<div class="ui container main text segment">
    <div class="ui huge header">Edit Blog</div>
    <form class="ui form" action="/blogs/<%=data._id%>?_method=PUT" method="POST">
        <div class="field">
            <label>Title</label>
            <input type="text" name="blog[title]" value="<%=data.title%>">
        </div>
        <div class="field">
            <label>Image Url</label>
            <input type="text" name="blog[image]" value="<%=data.image%>">
        </div>
        <div class="field">
            <label>Blog Content</label>
            <textarea name="blog[body]"><%=data.body%></textarea>
        </div>
        <button class="ui inverted green button big">Submit</button>
    </form>
</div>

<%- include("partials/footer")%>